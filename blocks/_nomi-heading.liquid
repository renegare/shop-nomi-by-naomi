{% liquid
  assign heading_text = block.settings.heading_text
  assign heading_level = block.settings.heading_level
  assign heading_style = block.settings.heading_style
  assign text_alignment = block.settings.text_alignment
  assign text_color = block.settings.text_color
  assign max_width = block.settings.max_width
%}

{% if heading_text != blank %}
  <{{ heading_level }} class="nomi-heading nomi-heading--{{ heading_style }} nomi-heading--{{ text_alignment }}" style="color: {{ text_color }}; max-width: {{ max_width }};">
    {{ heading_text }}
  </{{ heading_level }}>
{% endif %}

{% stylesheet %}
  .nomi-heading {
    font-family: var(--font-primary);
    font-weight: var(--font-weight-bold);
    color: var(--nomi-text-dark);
    margin: 0 0 var(--spacing-lg) 0;
    line-height: 1.2;
  }

  .nomi-heading--display {
    font-size: clamp(3rem, 6vw, 5rem);
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .nomi-heading--h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
  }

  .nomi-heading--h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.2;
  }

  .nomi-heading--h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    line-height: 1.3;
  }

  .nomi-heading--h4 {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    line-height: 1.4;
  }

  .nomi-heading--h5 {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    line-height: 1.4;
  }

  .nomi-heading--h6 {
    font-size: 1rem;
    line-height: 1.5;
  }

  .nomi-heading--left {
    text-align: left;
  }

  .nomi-heading--center {
    text-align: center;
  }

  .nomi-heading--right {
    text-align: right;
  }

  .nomi-heading--accent {
    color: var(--nomi-accent);
  }

  .nomi-heading--primary {
    color: var(--nomi-primary);
  }

  .nomi-heading--light {
    color: var(--nomi-text-light);
  }

  .nomi-heading--muted {
    color: var(--nomi-text-muted);
  }
{% endstylesheet %}

